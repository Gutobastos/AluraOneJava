alert('Bem vindo ao jogo descubra o número secreto !');
let numeroSecreto = 9;
console.log(numeroSecreto);
let chute;

while(chute != numeroSecreto) {
    chute = prompt('Escolha um número entre 1 - 10');
if(numeroSecreto == chute) {
    alert (`Isso aí, você acertou o número sercreto: ${numeroSecreto}`)
} else {
    if (numeroSecreto > chute) {
        alert(`O seu número ${chute} é MENOR que o NÚMERO SECRETO!`)
    }   else {
           alert(`O seu número ${chute} é MAIOR que o NÚMERO SECRETO!`)
    }
} 
}
